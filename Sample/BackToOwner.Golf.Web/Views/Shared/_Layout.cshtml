@using BA.MultiMvc.Framework;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="Author" content="" />
    <meta name="Keywords" content="" />
    <meta name="Description" content="" />
    <!-- protocol http -->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="Content-Style-Type" content="text/css" />
    <meta http-equiv="Content-Script-Type" content="text/javascript" />
    <meta http-equiv="Content-Language" content="@TenantContext.Language" />
    <!-- Dublin Core -->
    <meta name="DC.Language" content="@TenantContext.Language" />
    <meta name="DC.Creator" content="BelgianAgencies.com" />
    <meta name="DC.Date.modified" scheme="W3CDTF" content="2012/04/01" />
    <link href="@Url.Content("~/Content/" + TenantContext.TenantKey + "/styles.css")" media="screen" title="Normal" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/" + TenantContext.TenantKey + "/supersized.core.css")" media="screen" title="Normal" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.maskedinput.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/knockout-2.0.0.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/supersized.3.2.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/loadsuper.js")" type="text/javascript"></script>
    @RenderSection("head")
</head>
<body>
    <div id="container">
        <div id="header">
            <header>
                <img src="@Url.Content("/Content/" + TenantContext.TenantKey + "/images/logo.png")" alt="GOLFLABEL.NET" />
                <nav>
                <div id="menu">
                    <ul class="nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink(TenantResources.Values["about_title"], "About", "Home")</li>
                        <li>@Html.ActionLink(TenantResources.Values["faq_title"], "Faq", "Home")</li>
                        <li>@Html.ActionLink(TenantResources.Values["who_title"], "Who", "Home")</li>
                    </ul>
                    <ul class="lang">
                        <li>
                            @Html.ActionLink("fr", this.ViewContext.RouteData.Values["action"].ToString(), new { language = "fr" })
                            <span>&nbsp;/&nbsp;</span>
                        </li>
                        <li>
                            @Html.ActionLink("nl", this.ViewContext.RouteData.Values["action"].ToString(), new { language = "nl" })
                            <span>&nbsp;/&nbsp;</span>
                        </li>
                        <li>@Html.ActionLink("en", this.ViewContext.RouteData.Values["action"].ToString(), new { language = "en" })</li>
                    </ul>
                </div>
                </nav>
            </header>
            <div id="content">
                <section id="main">
                 @RenderBody()
                 </section>
                <footer>
                <div id="footer">
                    @Html.ActionLink(TenantResources.Values["privacy_title"], "Privacy", "Home")
                    @Html.ActionLink(TenantResources.Values["conditions_title"], "Terms", "Home")
                    @Html.ActionLink(TenantResources.Values["dealers_title"], "Dealers", "Home")
                    @Html.ActionLink(TenantResources.Values["contact_title"], "Contact", "Home")
                </div>
                </footer>
            </div>
        </div>
    </div>
</body>
</html>
